<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:Okuma.Scout.TestApp.net4"
    >

    <SolidColorBrush x:Key="Background1" Color="#FFE7F4FF" />

    <LinearGradientBrush x:Key="Red_Bright" EndPoint="0,5" StartPoint="0,0">
        <GradientStop Color="Red" Offset="0"/>
        <GradientStop Color="#FFC1272D" Offset="0.196"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GreyFade" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="WhiteSmoke" Offset="0"/>
        <GradientStop Color="#FFB4B4B4" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueGradient" EndPoint="0.5,1" StartPoint="0.5,0">
        <LinearGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                <TranslateTransform/>
            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#FF00B7F0" Offset="0"/>
        <GradientStop Color="#FF0C308E" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>